<h1>Eat-Da-Burger!</h1>

 <h2>Add A Delicious Burger</h2>

  <div class="row">
    <div class="col s12">
       <form action="/burger/create" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Enter Delicious Burger">
      <button type="submit" class="addBurgerButton">Add The Burger</button>
    </form>
  </div>
</div>   


<div class="container">
  <div class="row">
    <div class="col-xs-6 text-center class="task">
     <div class="row">
      {{#each burgers}}
        {{#unless this.devoured}}
          <div class="col-xs-9 text-center">
           <pre>{{this.id}}. {{this.burger_name}}</pre>
          </div> 
          <div class="col-xs-3 text-center">
          <form method="POST" action="/burger/update?_method=PUT"
          class="button-size">
              <input type="hidden" name="id" type="text"
              value={{this.id}}>
              <br>
              <button type="submit" class="btn btn-default">
              DEVOUR IT!</button>
          </form>
         </div>
         {{/unless}}
         {{/each}} 
         </div>
      </div>
      <div class="col-xs-6 text-center" class="task">
              {{#each burgers}}
                {{#if this.devoured}}
                  <form action="/burger/delete" method="PUT">
                    <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
                    <!-- <button type="submit" class="btn btn-danger">Delete</button> -->
                  </form>
                {{/if}}
              {{/each}}
        </div>
    </div>
 </div> 
  
 


              